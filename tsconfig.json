{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES2022",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"include": ["src/**/*.ts", "index.ts"],
	"exclude": ["node_modules"]
}
